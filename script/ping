# Source utils
source "$(dirname "$0")/../utils"

# Trap untuk Ctrl+C
cleanup() {
    exit 1
}
trap cleanup INT

ping_host() {
    local host=$1
    echo -e "\n${GREEN}[+] Pinging: ${host}${RESET}"
    if ping -c 2 -W 2 "$host" | grep -E "bytes from" > /dev/null; then
        ping -c 2 -W 2 "$host" | grep -E "bytes from|packet loss|rtt"
        return 0
    else
        error "Gagal ping ke ${host}"
        return 1
    fi
}

clear
banner "ğŸŒ PING NETWORK TEST TOOL"
divider

# Ping 8.8.8.8
ping_host "8.8.8.8"
hasil_ping_ip=$?
divider

# Ping google.com
ping_host "google.com"
hasil_ping_domain=$?
divider

# Result
info "Status Koneksi:"
if [[ $hasil_ping_ip -eq 0 && $hasil_ping_domain -eq 0 ]]; then
    success "Internet Aktif"
elif [[ $hasil_ping_ip -eq 0 && $hasil_ping_domain -ne 0 ]]; then
    warning "DNS Error â€” IP bisa diakses tapi domain gagal resolve"
elif [[ $hasil_ping_ip -ne 0 && $hasil_ping_domain -eq 0 ]]; then
    warning "Koneksi terbatas â€” DNS bisa resolve tapi gateway/IP gagal"
else
    error "Tidak Ada Koneksi Internet"
fi

# Tunggu user tekan Enter
info "Tekan Enter untuk keluar..."
read